{
  "name": "create-a-blog-website",
  "version": "1.0.0",
  "description": "A blog website built with Express.js, TypeScript, and Nunjucks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --watch src --watch views --watch data --ext ts,njk,json --exec ts-node src/index.ts",
    "dev:build": "concurrently \"npm run build:watch\" \"npm run start:watch\""
  },
  "keywords": [
    "blog",
    "express",
    "typescript",
    "nunjucks"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/nunjucks": "^3.2.6",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
